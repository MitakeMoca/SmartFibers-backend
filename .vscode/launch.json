{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FastAPI Dev",
            "type": "debugpy",
            "request": "launch",
            "module": "uv",
            "args": [
                "run",
                "fastapi",
                "dev",
                "app/main.py"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8084"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}