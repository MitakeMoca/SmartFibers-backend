{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/app"
        },
        {
            "name": "FastAPI Debug Mode",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--debug"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/app"
        }
    ]
}
